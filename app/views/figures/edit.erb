<h1>Update Figure</h1>

<form action="/figures/<%=@figure.id%>" method="POST">
<input type="hidden" id="hidden" value="PATCH" name="_method">
  <label>Figure Name:</label>
  <input type="text" name="figure[name]" id="figure_name" value="<%=@figure.name%>">

  <br></br>

  <label>Edit Title:</label>
  <%Title.all.each do |title|%>
    <input type="checkbox" name="figure[title_ids][]" id="<%= title.id%>" value="<%=title.id%>" <%='checked' if @figure.titles.include?(title) %>><%=title.name%></input>
  <%end%>
  <label>Add a New Title:</label>
  <input type="text" id="new_title" name="title[name]">

  <br></br>

  <label>Edit Landmark:</label>
  <br></br>
  <%Landmark.all.each do |landmark|%>
    <input type="checkbox" name="figure[landmark_ids][]" id="<%= landmark.id%>" value="<%=landmark.id%>" <%='checked' if @figure.landmarks.include?(landmark) %>><%=landmark.name%></input>
  <%end%>
  <label>Add a New Landmark:</label>
    <input type="text" id="new_landmark" name="landmark[name]"></input>
  <br></br>
  <input type="submit" value="Edit Figure">
</form>
